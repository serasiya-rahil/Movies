@model Movies.Entities.Movie

@{
    ViewData["Title"] = "Add New Movie";
}

<h1> Add New Movie</h1>
<form method="post" asp-action="Create" asp-controller="Movies">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="Name" class="form-control"/>
    </div>

    <div class="form-group">
        <label>Year</label>
        <input type="text" asp-for="Year" class="form-control"/>
    </div> 
    <div class="form-group">
        <label>Rating</label>
        <input type="text" asp-for="Rating" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-controller="Movies" asp-action="List" class="btn btn-primary">Cancel</a>
</form>

